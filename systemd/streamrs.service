[Unit]
Description=streamrs
After=graphical-session.target
Wants=graphical-session.target
ConditionUser=!gdm
ConditionUser=!root

[Service]
Type=simple
Environment=PATH=%h/.local/bin:/usr/local/bin:/usr/bin
ExecStartPre=/usr/bin/streamrs --init --force-images
ExecStart=/usr/bin/env streamrs
Restart=on-failure
RestartSec=2

[Install]
WantedBy=graphical-session.target
